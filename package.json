{
  "name": "flare-price-provider",
  "version": "1.0.0",
  "repository": "git@gitlab.com:flarenetwork/flare-price-provider.git",
  "author": "flare",
  "license": "MIT",
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 160,
    "semi": true,
    "singleQuote": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-check"
    }
  },
  "lint-staged": {
    "lib/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "lint-check"
    ]
  },
  "scripts": {
    "lint": "yarn prettier -w 'lib/**/*.{ts,tsx}' --config ./package.json",
    "lint-check": "yarn prettier -c 'lib/**/*.{ts,tsx}' --config ./package.json",
    "lint2": "tslint -c tslint.json -p tsconfig.json --fix",
    "artifacts": "ts-node lib/refresh-artifacts.ts",
    "typechain-web3-v1-external": "yarn typechain --target=web3-v1 --out-dir typechain-web3-v1-external \"data/artifacts/!(build-info)/**/+([a-zA-Z0-9_]).json\" 1> nul",
    "typechain-web3-v1": "yarn typechain --target=web3-v1 --out-dir typechain-web3-v1 \"artifacts/!(build-info)/**/+([a-zA-Z0-9_]).json\" 1> nul",
    "compile": "yarn hardhat compile && yarn typechain-truffle-v5 && yarn typechain-web3-v1",
    "c": "yarn compile",
    "typechain-truffle-v5": "yarn typechain --target=truffle-v5 --out-dir typechain-truffle \"artifacts/!(build-info)/**/+([a-zA-Z0-9_]).json\" 1> nul",
    "sync": "yarn artifacts && yarn typechain-web3-v1 && yarn typechain-web3-v1-external",
    "deploy": "yarn hardhat run scripts/deploy.ts --network local",
    "stateconnector-hh": "concurrently -r --success first \"yarn hardhat node > nul\" \"wait-on http://127.0.0.1:8545 && yarn deploy\"",
    "stateconnector": "yarn hardhat run scripts/deploy.ts --network scdev",
    "build": "yarn tsc",
    "docker-build": "bash scripts/docker-build.sh",
    "docker-deploy": "bash scripts/docker-deploy.sh",
    "prewatch-and-run": "npm-run-all typechain-web3-v1",
    "watch-and-run": "ts-node-dev --notify --respawn -- lib/runAttesterClient.ts",
    "watch-and-run-multi": "ts-node-dev --notify --respawn -- lib/testMultiAttesterClients.ts -c configs/config.json -m configs/config.multitest.json -n 5",
    "watch-and-run-indexer": "ts-node-dev --trace-warnings --notify --respawn -- lib/indexer/indexer.ts",
    "watch-and-run-alerts": "ts-node-dev --trace-warnings --notify --respawn -- lib/alerts/alerts.ts",
    "dev": "CONFIG_PATH=dev NODE_ENV=development yarn watch-and-run",
    "devprod": "CONFIG_PATH=dev NODE_ENV=production node dist/lib/runAttesterClient.js",
    "devmulti": "DOTENV=DEV yarn watch-and-run-multi",
    "devindexer": "DOTENV=DEV yarn watch-and-run-indexer",
    "devalerts": "DOTENV=DEV yarn watch-and-run-alerts",
    "test_indexed_query_manager": "env DOTENV=DEV NODE_ENV=development yarn hardhat test test/IndexedQueryManager.test.ts",
    "test": "mocha -r ts-node/register -t 0 --exit",
    "testdebug": "DOTENV=DEV tsdx test --env=node test/MerkleTree.test.ts",
    "atest": "yarn hardhat run scripts/generateAttestationRequest.ts --network local",
    "codegen": "env NODE_ENV=development yarn ts-node lib/verification/codegen/codegen.ts",
    "htest": "yarn codegen && yarn c && yarn hardhat test test/HashTest.test.ts",
    "preroutes": "ts-node lib/scripts/create-routes-folder.ts",
    "routes": "yarn tsoa routes && yarn tsoa spec",
    "devbackend": "CONFIG_PATH=dev NODE_ENV=development yarn ts-node-dev --notify --respawn -- lib/webserver/server.ts",
    "devspammer_old": "DOTENV=DEV DOTENV_INCLUDE=\".indexer.remote.dev.read.env\" yarn ts-node-dev --notify --respawn -- lib/spammer/attestation-spammer.ts -- -c XRP -r http://127.0.0.1:9650/ext/bc/C/rpc  -a artifacts/contracts/StateConnector.sol/StateConnector.json -t $(cat .stateconnector-address) -b 1 -o 1 -f 1 -d 1000 -l XRP -k test-1020-accounts.json",
    "devspammer": "CONFIG_PATH=dev NODE_ENV=development yarn ts-node-dev --notify --respawn -- lib/spammer/attestation-spammer.ts -- -c BTC",
    "devctail": "CONFIG_PATH=dev NODE_ENV=development yarn ts-node-dev --notify --respawn lib/tools/ctail/ctail.ts"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "3.10.1",
    "@openzeppelin/contracts": "4.5.0",
    "assert": "^2.0.0",
    "axios": "^0.26.1",
    "axios-retry": "^3.2.4",
    "body-parser": "^1.19.2",
    "cli-progress": "^3.10.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "dotenv": "10.0.0",
    "ethers": "5.1.4",
    "express": "^4.17.3",
    "flare-mcc": "link:../mcc",
    "fs": "^0.0.1-security",
    "glob": "7.1.7",
    "helmet": "^5.0.2",
    "mysql2": "^2.3.3",
    "ntp-time-sync": "^0.2.0",
    "random-number-csprng": "1.0.2",
    "sqlite3": "^5.0.2",
    "swagger-ui-express": "^4.3.0",
    "tail": "^2.2.4",
    "tsoa": "^3.14.1",
    "typeorm": "^0.2.41",
    "typescript-ioc": "^3.2.2",
    "web3": "1.3.5",
    "web3-utils": "1.3.5",
    "winston": "3.3.3",
    "xrpl": "^2.1.0",
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-truffle5": "^2.0.3",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/hardhat": "^3.0.0",
    "@typechain/truffle-v5": "^7.0.0",
    "@typechain/web3-v1": "3.1.0",
    "@types/assert": "^1.5.6",
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.0",
    "@types/cli-progress": "^3.9.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/glob": "7.1.4",
    "@types/helmet": "^4.0.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "15.0.2",
    "@types/node-fetch": "^3.0.3",
    "@types/random-number-csprng": "^1.0.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/web3": "^1.2.2",
    "@types/yargs": "^17.0.3",
    "concurrently": "^6.4.0",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.7.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "ts-node": "9.1.1",
    "ts-node-dev": "^1.1.1",
    "tslint": "^6.1.3",
    "typechain": "5.1.2",
    "typescript": "4.4.2",
    "wait-on": "^6.0.0"
  }
}
