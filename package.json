{
  "name": "flare-price-provider",
  "version": "1.0.0",
  "repository": "git@gitlab.com:flarenetwork/flare-price-provider.git",
  "author": "flare",
  "license": "MIT",
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 160,
    "semi": true,
    "singleQuote": false
  },
  "lint-staged": {
    "lib/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "lint-check"
    ]
  },
  "scripts": {
    "lint": "yarn prettier -w 'lib/**/*.{ts,tsx}' --config ./package.json",
    "lint-check": "yarn prettier -c 'lib/**/*.{ts,tsx}' --config ./package.json",
    "lint2": "tslint -c tslint.json -p tsconfig.json --fix",
    "typechain-web3-v1": "yarn typechain --target=web3-v1 --out-dir typechain-web3-v1 \"artifacts/!(build-info)/**/+([a-zA-Z0-9_]).json\" 1> nul",
    "typechain-web3-v1-new": "yarn typechain --target=web3-v1 --out-dir typechain-web3-v1-new \"artifacts-new/!(build-info)/**/+([a-zA-Z0-9_]).json\" 1> nul",
    "compile": "yarn hardhat compile && yarn typechain-truffle-v5 && yarn typechain-web3-v1",
    "c": "yarn compile",
    "typechain-truffle-v5": "yarn typechain --target=truffle-v5 --out-dir typechain-truffle \"artifacts/!(build-info)/**/+([a-zA-Z0-9_]).json\" 1> nul",
    "deploy": "yarn hardhat run scripts/deploy.ts --network local",
    "stateconnector": "yarn hardhat run scripts/deploy.ts --network scdev",
    "build": "yarn tsc",
    "docker-build": "bash scripts/docker-build.sh",
    "docker-deploy": "bash scripts/docker-deploy.sh",
    "prewatch-and-run": "npm-run-all typechain-web3-v1",
    "watch-and-run": "ts-node-dev --notify --respawn -- lib/runAttesterClient.ts",
    "watch-and-run-indexer": "ts-node-dev --trace-warnings --notify --respawn -- lib/runIndexer.ts",
    "watch-and-run-alerts": "ts-node-dev --trace-warnings --notify --respawn -- lib/alerts/alerts.ts",
    "dev": "CONFIG_PATH=.secure.dev NODE_ENV=development yarn ts-node lib/runAttesterClient.ts",
    "devvpws": "CONFIG_PATH=.secure.dev NODE_ENV=development yarn ts-node lib/vpwserver/runVPWS.ts",
    "devvpwclient": "CONFIG_PATH=.secure.dev NODE_ENV=development yarn ts-node lib/vpwserver/client/testClient.ts",
    "devprod": "CONFIG_PATH=prod NODE_ENV=production node dist/lib/runAttesterClient.js",
    "devindexer": "CONFIG_PATH=.secure.dev DOTENV=DEV yarn ts-node lib/runIndexer.ts",
    "devalerts": "CONFIG_PATH=.secure.dev DOTENV=DEV yarn watch-and-run-alerts",
    "test": "mocha -r ts-node/register -t 0 --exit",
    "test-all-contracts": "yarn hardhat test test/**/*.test-contract.ts",
    "test-all-other": "mocha -r ts-node/register -t 0 --exit test/**/*.test.ts",
    "test-all": "npm-run-all test-all-contracts test-all-other",
    "test:coverage": "nyc yarn test-all",
    "atest": "yarn hardhat run scripts/generateAttestationRequest.ts --network local",
    "codegen": "env NODE_ENV=development yarn ts-node lib/verification/codegen/codegen.ts",
    "htest": "yarn codegen && yarn c && yarn hardhat test test/HashTest.test.ts",
    "preroutes": "ts-node lib/scripts/create-routes-folder.ts",
    "routes": "yarn tsoa routes && yarn tsoa spec",
    "devbackend": "CONFIG_PATH=.secure.dev NODE_ENV=development yarn ts-node-dev --notify --respawn -- lib/webserver/server.ts",
    "devspammer_old": "DOTENV=DEV DOTENV_INCLUDE=\".indexer.remote.dev.read.env\" yarn ts-node-dev --notify --respawn -- lib/spammer/attestation-spammer.ts -- -c XRP -r http://127.0.0.1:9650/ext/bc/C/rpc  -a artifacts/contracts/StateConnector.sol/StateConnector.json -t $(cat .stateconnector-address) -b 1 -o 1 -f 1 -d 1000 -l XRP -k test-1020-accounts.json",
    "devspammer": "CONFIG_PATH=.secure.dev NODE_ENV=development yarn ts-node-dev --notify --respawn -- lib/spammer/attestation-spammer.ts -- -c ALGO",
    "devctail": "CONFIG_PATH=dev NODE_ENV=development yarn ts-node-dev --notify --respawn lib/tools/ctail/ctail.ts",
    "devconfig": "yarn ts-node-dev --notify --respawn lib/attester/configvalidate.ts",
    "devadmin": "DOTENV=DEV CONFIG_PATH=.secure.dev yarn ts-node lib/admin/admin.ts",
    "devinstall": "DOTENV=DEV CONFIG_PATH=.secure.dev yarn ts-node lib/install/install.ts ../attestation-suite-config/",
    "admin": "CONFIG_PATH=.secure node dist/lib/admin/admin.js"
  },
  "dependencies": {
    "@flarenetwork/mcc": "1.3.1",
    "@google-cloud/secret-manager": "4.0.0",
    "@openzeppelin/contracts": "4.5.0",
    "assert": "2.0.0",
    "body-parser": "1.20.0",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "dotenv": "16.0.1",
    "event-stream": "4.0.1",
    "express": "4.18.1",
    "glob": "8.0.3",
    "helmet": "5.1.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "2.3.3",
    "node-disk-info": "1.3.0",
    "swagger-ui-express": "4.4.0",
    "tail": "2.2.4",
    "tsoa": "4.1.0",
    "typeorm": "0.3.6",
    "typescript-ioc": "3.2.2",
    "web3": "1.7.3",
    "web3-utils": "1.7.3",
    "winston": "3.7.2",
    "ws": "^8.8.0",
    "yargs": "17.5.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "1.0.2",
    "@nomiclabs/hardhat-truffle5": "2.0.6",
    "@nomiclabs/hardhat-web3": "2.0.0",
    "@openzeppelin/test-helpers": "0.5.15",
    "@typechain/hardhat": "6.1.0",
    "@typechain/truffle-v5": "7.0.0",
    "@typechain/web3-v1": "3.1.0",
    "@types/assert": "1.5.6",
    "@types/body-parser": "1.19.2",
    "@types/chai": "4.3.1",
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.13",
    "@types/glob": "7.2.0",
    "@types/helmet": "4.0.0",
    "@types/mocha": "9.1.1",
    "@types/node": "17.0.42",
    "@types/swagger-ui-express": "4.1.3",
    "@types/web3": "1.2.2",
    "@types/yargs": "17.0.10",
    "axios": "0.27.2",
    "fs-extra": "10.1.0",
    "hardhat": "2.9.9",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tslint": "6.1.3",
    "typechain": "5.1.2",
    "typescript": "4.4.2",
    "wait-on": "6.0.1"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "lib/**/!(*.test.*).[tj]s?(x)"
    ],
    "exclude": [
      "src/_tests_/**/*.*",

      "lib/vpwserver/runVPWS.ts",
      "lib/vpwserver/client/testClient.ts"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  }
}
